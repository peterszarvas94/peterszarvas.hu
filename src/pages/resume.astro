---
import Link from "../components/resume/Link.astro";
import Article from "../components/resume/Article.astro";
import ContactLink from "../components/resume/ContactLink.astro";
import ContactItem from "../components/resume/ContactItem.astro";
import H2 from "../components/resume/H2.astro";
import H3 from "../components/resume/H3.astro";
import List from "../components/resume/List.astro";
import Section from "../components/resume/Section.astro";
import Strong from "../components/resume/Strong.astro";
import Layout from "../layouts/resume.astro";
import Phone from "../components/icons/phone.astro";
import Linkedin from "../components/icons/linkedin.astro";
import Github from "../components/icons/github.astro";
import Globe from "../components/icons/globe.astro";
import Mail from "../components/icons/mail.astro";
import House from "../components/icons/house.astro";
import Icon from "../components/resume/Icon.astro";
import SkillItem from "../components/resume/SkillItem.astro";
import Highlight from "../components/resume/Highlight.astro";
import Chip from "../components/resume/Chip.astro";
---

<Layout title="Péter Szarvas - Resume">
  <header class="flex justify-center py-10 print:hidden">
    <button
      class="bg-gray-700 text-white px-4 py-2 rounded-md hover:bg-gray-600"
      onclick="window.print()"
    >
      Print
    </button>
  </header>
  <main
    class="min-h-[1120px] max-w-[794px] mx-auto outline outline-current outline-0 p-10 font-anuphan"
  >
    <div class="flex flex-wrap w-full">
      <div class="grow">
        <h1 class="text-3xl text-gray-700 uppercase font-bold">
          Péter Szarvas
        </h1>
        <p class="text-2xl pb-2">web developer</p>
      </div>

      <ul class="grow">
        <ContactLink text="+36 20 2746444" href="tel:+36202746444">
          <Icon appendClass="-rotate-90">
            <Phone />
          </Icon>
        </ContactLink>

        <ContactLink
          text="contact@peterszarvas.hu"
          href="mailto:contact@peterszarvas.hu"
        >
          <Icon>
            <Mail />
          </Icon>
        </ContactLink>

        <ContactLink
          text="linkedin.com/in/peterszarvas94"
          href="https://www.linkedin.com/in/peterszarvas94/"
        >
          <Icon>
            <Linkedin />
          </Icon>
        </ContactLink>

        <ContactLink
          text="github.com/peterszarvas94"
          href="https://github.com/peterszarvas94"
        >
          <Icon>
            <Github />
          </Icon>
        </ContactLink>

        <ContactLink text="peterszarvas.hu" href="https://peterszarvas.hu">
          <Icon>
            <Globe />
          </Icon>
        </ContactLink>

        <ContactItem text="Martonvásár, Hungary">
          <Icon>
            <House />
          </Icon>
        </ContactItem>
      </ul>
    </div>

    <Article noLine>
      <H2>Skills</H2>

      <ul class="flex flex-wrap gap-2 justify-between">
        <SkillItem>React</SkillItem>
        <SkillItem>Next.js</SkillItem>
        <SkillItem>TypeScript</SkillItem>
        <SkillItem>JavaScript</SkillItem>
        <SkillItem>Node.js</SkillItem>
        <SkillItem>Astro.js</SkillItem>
        <SkillItem>Go</SkillItem>
        <SkillItem>HTML</SkillItem>
        <SkillItem>CSS</SkillItem>
        <SkillItem>Git</SkillItem>
      </ul>
    </Article>

    <Article>
      <H2>Experience</H2>

      <Section>
        <H3>Full-stack Developer @ Eviden (as contractor)</H3>
        <p>2024 february - present</p>
        <List>
          <li>
            Creating a greenfield application for millions of users for a goverment
            project
          </li>
          <li>
            <Chip text="React" filled={true}/>
            <Chip text="TypeScript" filled={true}/>
            <Chip text="Node.js" filled={true}/>
            <Chip text="HTML" /> 
            <Chip text="CSS" />
            <Chip text="Material UI" filled={true}/>
            <Chip text="Git" filled={true}/>
          </li>
        </List>
      </Section>

      <Section>
        <H3>Developer @ Kyndryl</H3>
        <p>2022 - 2024</p>
        <List>
          <li>
            Developing an internal application (a ticketing system) for new
            business opportunities
          </li>
          <li>
            <Chip text="React" /> 
            <Chip text="JavaScript" filled={true}/>
            <Chip text="Node.js" /> 
            <Chip text="HTML" /> 
            <Chip text="CSS" /> 
            <Chip text="Git" /> 
          </li>
        </List>
      </Section>

      <Section>
        <H3>Microsoft System Administrator @ IBM / Kyndryl</H3>
        <p>2020 - 2022</p>
        <List>
          <li>Managing a hybrid could environment, with Windows servers and Microsoft Azure</li>
          <li>PowerShell scripting for automation</li>
        </List>
      </Section>
    </Article>

    <Article>
      <H2>Some personal projects</H2>

      <List>
        <li>
          <Link href="https://peterszarvas.hu">peterszarvas.hu</Link>
          - my personal portfolio, written in <Highlight text="Astro.js" />
        </li>
        <li>
          <Link href="https://szeremletanc.hu">szeremletanc.hu</Link>
          - dancegroup's website, Astro.js, with Wordpress CMS
        </li>
        <li>
          <Link href="https://pantlikazenekar.hu/">pantlikazekar.hu</Link>
          - webpage for my music band, Astro.js
        </li>
        <li>
          <Link href="https://weddingsite-xi.vercel.app/">
            weddingsite-xi.vercel.app
          </Link>
          - online wedding invitation, React
        </li>
        <li>
          <Link href="https://react-calculator-seven-theta.vercel.app/">
            react-calculator-seven-theta.vercel.app
          </Link> - simple calculator, React
        </li>
        <li>
          <Link href="https://nextjs-fake-webshop.vercel.app/">
            nextjs-fake-webshop.vercel.app
          </Link> - fake webshop, <Highlight text="Next.js" />
        </li>
        <li>
          <Link href="https://react-spending-tracker.vercel.app/">
            react-spending-tracker.vercel.app
          </Link> - spending tracker, React
        </li>
        <li>
          <Link href="https://big-tac-toe.vercel.app/">
            big-tac-toe.vercel.app
          </Link>
          - tic-tac-toe with multiple options, React
        </li>
      </List>
    </Article>

    <Article>
      <H2>Education</H2>
      <Section>
        <H3>Computer Science @ University of Szeged</H3>
        <p>3 semesters</p>
      </Section>
    </Article>

    <Article>
      <H2>Other skills and certifications</H2>
      <List>
        <li>Azure AZ-104 certifications</li>
        <li>Upper-intermediate English knowledge</li>
      </List>
    </Article>

  </main>
</Layout>
