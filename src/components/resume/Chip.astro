---
interface Props {
  text: string;
  filled?: boolean;
}

const { text, filled }: Props = Astro.props;
---

<div class="pr-2 inline">
  {
    filled ? (
      <strong class="font-normal text-white bg-gray-700 px-1 rounded-sm">
        {text}
      </strong>
    ) : (
      <span class="">{text}</span>
    )
  }
</div>
